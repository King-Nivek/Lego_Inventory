<?xml version="1.0" encoding="utf-8"?>
<manifest package="albright.csit.legosetstracker"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LegoSetListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".LegoSetDetailActivity"
            android:parentActivityName=".LegoSetListActivity">
        </activity>

        <activity
            android:name=".LegoThemeListActivity"
            android:parentActivityName=".LegoSetListActivity">
        </activity>

        <activity
            android:name=".LegoThemeDetailActivity"
            android:parentActivityName=".LegoThemeListActivity">
        </activity>

    </application>

</manifest>
